{
  "name": "rose-link-e2e",
  "version": "1.3.6",
  "description": "E2E tests for ROSE Link using Playwright",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:grafana": "playwright test --project=grafana",
    "test:grafana:headed": "playwright test --project=grafana --headed",
    "test:grafana:firefox": "playwright test --project=grafana-firefox",
    "test:grafana:all": "playwright test --project=grafana --project=grafana-firefox",
    "report": "playwright show-report",
    "install-browsers": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}
